
<html>
<div class='cell'>
  <h1 class='card--light card'>
    <h2 class='cell card '>
      <button class='btn btn--primary btn--vote' {{action "deal" model on='click'}}> Deal </button>
      <button class='btn btn--primary btn--vote' {{action "newHand" model}}>New Hand</button>
    </h2>
    {{#each model.hand as |hand|}}
      {{hand.0.Value}} {{hand.0.Suit}}
    {{/each}}
    <h2>{{model.valueOfHand}}</h2>
  </h1>
</div>


</html>
